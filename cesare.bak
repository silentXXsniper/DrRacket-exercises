(define aA (char->integer #\A))
(define aZ (char->integer #\Z))
(define n-car 26)

(define rgl-cesare ;val algoritmo
  (lambda (crt)

    (let (
          (new-ascii (+ 1 (char-integer crt))
                     )
          (if (= new-ascii a2)
              (integer ->char new-ascii)
              (integer ->char (- new-ascii n-car))
              )
          )
      ))
  )
 